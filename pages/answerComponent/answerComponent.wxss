/* pages/answerComponent/answerConponent.wxss */
.modal-bg{
  width: 100%;
  height: 100vh;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 20;
}
.myanswer-box{
  width: 80vw;
  height: 106.8vw;
  background: #ffffff;
  border-radius: 2vw;
  position: absolute;
  top: 20vw;
  left: 10vw;
}
.myanswer-box .head{
  width: 80vw;
  height: 21.3vw;
  box-sizing: border-box;
  padding-top: 4.2vw;
  padding-left: 6.2vw;
  position: relative;
}
.myanswer-box .head image{
  width: 17vw;
  height: 17vw;
  background-color: #2ca244;
  border-radius: 50%;
  display: block;
  float: left;
}
.myanswer-box .head .title-box{
  width: 48vw;
  height: 17vw;
  float: left;
  box-sizing: border-box;
  padding-left: 4.6vw;
  padding-top: 1.6vw;
}
.myanswer-box .head .title-box text{
  display: block;
  font-size: 3.5vw;
  color: #474747;
  height: 7.3vw;

}
.myanswer-box .head .title-box button{
  width: 25.4vw;
  height: 6.6vw;
  display: block;
  border: unset;
  line-height: 6.6vw;
  font-size: 3.1vw;
  background-color: #fed943;
  margin: unset;
  box-shadow:0 0.6vw 2vw #dbb92c;
}
.exit{
  width: 5.3vw;
  height: 5.3vw;
  color: #666666;
  font-size: 5.3vw;
  text-align: center;
  position: absolute;
  right: 3.3vw;
  top: 1.6vw;
}
.list-box{
  width: 66.4vw;
  height: 78.4vw;
  padding-left: 7.2vw;
}
.list-box .list-item{
  width: 66.4vw;
  height: 18vw;
  border-bottom: #f1f1f1 0.2vw solid;
  box-sizing: border-box;
}
.list-box .list-item .title{
  font-size: 3.5vw;
  height: 10.4vw;
  box-sizing: border-box;
  padding-top: 4.4vw;
  padding-left: 1.7vw;
  color: #655117;
}
.list-box .list-item .ans{
  width: 66.4vw;
  height: 75vw;
  box-sizing: border-box;
  padding-left: 1.7vw;
}
.list-box .list-item .ans .ico{
  width: 4.5vw;
  height: 4.5vw;
  border-radius: 50%;
  text-align: center;
  line-height: 4.5vw;
  display: block;
  float: left;
  background-color: #fed932;
  font-size: 3vw;

}
.list-box .list-item .ans .err{
  color: #ffffff;
  background-color: #fb355b;
}
.list-box .list-item .ans-tit{
  font-size: 3.1vw;
  display: block;
  float: left;
  box-sizing: border-box;
  padding-left: 2vw;
}

.list-item{
  width: 92vw;
  height: 22.2vw;
  background-color: #ffffff;
  border-radius: 2vw;
  margin: 0 auto;
  position: relative;
  margin-bottom: 3.8vw;
}
.list-item .item-tit{
  height: 7vw;
  line-height: 7vw;
  padding-left: 2.4vw;
  box-sizing: border-box;
}
.list-item .item-tit text{
  width: 63vw;
  display: block;
  float: left;
  color: #1e1e1e;
  font-size: 3vw;
}
.list-item .item-tit navigator{
  color: #ee0016;
  display: block;
  float: left;
  width: 20vw;
  font-size: 3vw;
}
.list-item .close{
  width:5vw;
  height: 5vw;
  font-size: 4vw;
  position: absolute;
  top: 0;
  right: 0;
  display: block;
  box-sizing: border-box;
  border-radius: 50%;
  border: #b2b2b2 0.4vw solid;
  text-align: center;
  line-height: 3.8vw;
  color: #b2b2b2;
}
.list-item .item-content{
  height: 13.2vw;
  font-size: 3.5vw;
  color: #b0b0b0;
  line-height: 13vw;
  text-align: center;
}
.list-item .true-content{
  height: 15vw;
  padding-left: 2.4vw;
}
.list-item .true-content .index{
  width: 4.6vw;
  height: 4.6vw;
  float: left;
  border-radius: 50%;
  background-color: #ffc633;
  font-size: 2.3vw;
  text-align: center;
  line-height: 4.6vw;
  color: #ffffff;
  margin-top: 2.8vw;
}
.list-item .true-content .head{
  width: 10.3vw;
  height: 10.3vw;
  border-radius: 50%;
  display: block;
  float: left;
  background-color: #7b4553;
  margin-left: 1vw;
}
.list-item .true-content .center-box{
  width: 58.4vw;
  height: 14.7vw;
  float: left;
  box-sizing: border-box;
  padding-left: 2vw;
}
.list-item .true-content .center-box .title{
  font-size: 3.4vw;
  height: 5.6vw;
}
.list-item .true-content .center-box .title text{
  padding-right: 1.7vw;
}
.list-item .true-content .center-box .title image{
  width: 19vw;
  height: 3.2vw;
}
.list-item .true-content .center-box .message{
  font-size: 3.4vw;
  color: #969696;
}