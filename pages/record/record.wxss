/* pages/record/record.wxss */
.wrap{
  width: 100%;
  min-height: 100vh;
  padding: 0 4vw;
  padding-top: 4.7vw;
  box-sizing: border-box;
  background-color: #f5f5f5;
}
.title{
  height: 7.6vw;
}
.title text{
  float: left;
  font-size: 3.6vw;
}
.title navigator{
  color: #0b7bff;
  font-size: 3.2vw;
  float: right;
}
.list-item{
  width: 92vw;
  height: 22.2vw;
  background-color: #ffffff;
  border-radius: 2vw;
  margin: 0 auto;
  position: relative;
  margin-bottom: 3.8vw;
}
.list-item .item-tit{
  height: 7vw;
  line-height: 7vw;
  padding-left: 2.4vw;
  box-sizing: border-box;
}
.list-item .item-tit text{
  width: 63vw;
  display: block;
  float: left;
  color: #1e1e1e;
  font-size: 3vw;
}
.list-item .item-tit navigator{
  color: #ee0016;
  display: block;
  float: left;
  width: 20vw;
  font-size: 3vw;
}
.list-item .close{
  width:5vw;
  height: 5vw;
  font-size: 4vw;
  position: absolute;
  top: 0;
  right: 0;
  display: block;
  box-sizing: border-box;
  border-radius: 50%;
  border: #b2b2b2 0.4vw solid;
  text-align: center;
  line-height: 3.8vw;
  color: #b2b2b2;
}
.list-item .item-content{
  height: 13.2vw;
  font-size: 3.5vw;
  color: #b0b0b0;
  line-height: 13vw;
  text-align: center;
}
.list-item .true-content{
  height: 15vw;
  padding-left: 2.4vw;
}
.list-item .true-content .index{
  width: 4.6vw;
  height: 4.6vw;
  float: left;
  border-radius: 50%;
  background-color: #ffc633;
  font-size: 2.3vw;
  text-align: center;
  line-height: 4.6vw;
  color: #ffffff;
  margin-top: 2.8vw;
}
.list-item .true-content .head{
  width: 10.3vw;
  height: 10.3vw;
  border-radius: 50%;
  display: block;
  float: left;
  background-color: #7b4553;
  margin-left: 1vw;
}
.list-item .true-content .center-box{
  width: 58.4vw;
  height: 14.7vw;
  float: left;
  box-sizing: border-box;
  padding-left: 2vw;
}
.list-item .true-content .center-box .title{
  font-size: 3.4vw;
  height: 5.6vw;
}
.list-item .true-content .center-box .title text{
  padding-right: 1.7vw;
}
.list-item .true-content .center-box .title image{
  width: 19vw;
  height: 3.2vw;
}
.list-item .true-content .center-box .message{
  font-size: 3.4vw;
  color: #969696;
}
.noMucher{
  font-size: 3vw;
  text-align: center;
  color: #757575;
  padding-top: 1.7vw;
}