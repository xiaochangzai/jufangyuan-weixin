/* pages/home/home.wxss */
.wrap{	
	min-height: 100vh;
	width: 100vw;
	display: block;
	background-color: #ffd845;
  padding-top: 54vw;
  box-sizing: border-box;
}
.headImg{
  width: 20vw;
  height: 20vw;
  display: block;
  margin: 0 auto;
  box-sizing: border-box;
  border: #ffffff 0.5vw solid;
  border-radius: 50%;
}
.nickName{
  text-align: center;
  height: 9vw;
  padding-top: 2vw;
  font-size: 3.8vw;
  color: #190000;
}
.start{
  width: 30.6vw;
  height: 10vw;
  display: block;
  margin: 0 auto;
  font-size: 3.5vw;
  line-height: 10vw;
  border-radius: 5vw;
}
.menu{
  width: 93.4vw;
  height: 8vw;
  background-color: #ffffff;
  border-radius: 1vw;
  font-size: 3.5vw;
  margin: 0 auto;
  margin-top: 4vw;
}
.menu .menu-item{
  width: 23vw;
  height:8vw;
  display: block;
  float: left;
}
.menu .menu-item text:first-child{
  width: 22.6vw;
  display: block;
  float: left;
  text-align: center;
  color: #50532f;
  line-height: 8vw;
}
.menu .menu-item text:nth-child(2){
  width: 0.2vw;
  height: 4.6vw;
  background-color: #554c1f;
  display: block;
  float: left;
  margin-top: 1.5vw ;
}
.menu .menu-item:last-child text:last-child{
  width: 22.6vw;
  display: block;
  float: left;
  text-align: center;
  color: #50532f;
  background: unset;
  margin: unset;
  line-height: 8vw;
}
.menu .menu-item:last-child text:first-child{
  width: 0.2vw;
  height: 4.6vw;
  background-color: #554c1f;
  display: block;
  float: left;
  margin-top: 1.5vw ;
}
.help{
  width: 4.3vw;
  height: 4.3vw;
  display: block;
  position: absolute;
  top: 9.2vw;
  right: 4vw;
}
.tousu{
  width: 13vw;
  height: 6.7vw;
  display: block;
  position: absolute;
  top: 17.3vw;
  right: 2.3vw;
}
.menu-item button{
  height: 8vw;
  width: 20vw;
  padding: 0;
  margin: 0;
}
.menu-item button text:last-child{
  width: 0.2vw;
  height: 4.6vw;
  background-color: #554c1f;
  display: block;
  float: right;
  margin-top: 1.5vw ;
}